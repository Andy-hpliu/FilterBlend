.source
  color lighten($text-sub, 60%)
  font-size .95em
  margin-bottom 10px
  &__inner
    padding 10px 15px
  &__item
    display flex
    align-items center
    &:hover
      color lighten($text-sub, 40%)
    &.is-hidden
      .part:not(.-hide)
      .source__selected
      .source__input
      .source__upload
      input
        pointer-events none
        color #eee !important
      .part.-hide
        background-color #e88d93 !important
        color #fff

  &__cell
    &.-hide
      font-size 1.1em
      line-height 1
      flex 1
      text-align right
    &.-input
      position relative
      margin-right 4px

  &__selected
    display inline-block
    width 14px
    height 14px
    vertical-align middle
    margin-right 10px
    border-radius 100%
    background #eee
    transition background .2s
    cursor pointer
    .is-selected &
      background $base-sub
  &__input
    display inline-block
    padding .36em 0
    input
      color $text-sub
      padding-right 2.3em
  &__upload
    position absolute
    top .36em
    right 0
    width 26px
    line-height 30px
    font-size 1.1em
    text-align center
    cursor pointer
    vertical-align middle
    transition .2s
    &:hover
      color $base-sub
    input
      opacity 0
      visibility hidden
  .part
    display inline-block
    padding .32em .6em
    margin 0 .1em
    cursor pointer
    border-radius .28em
    transition background .2s, color .2s
    &:hover
      color $base-sub
    &.-hide
      &:hover
        background $base-sub
        color #fff
    &.-url
      &:hover
        background transparent
        color inherit
      input
        margin 0 .2em
    &.-position
      cursor move
      span:first-child
        margin-right 5px
    &.-size
      cursor ns-resize
