.source
  color lighten($text-sub, 60%)
  font-size .95em
  margin-bottom 10px
  &__inner
    padding 10px 15px
  &__item
    display flex
    align-items center
    &:hover
      color lighten($text-sub, 40%)
    &.is-hidden
      .part:not(.-hide)
      .source__selected
      .source__input
      .source__upload
      input
        pointer-events none
        color #eee !important
      .part.-hide
        background-color orange
        color #fff

  &__cell
    &.-hide
      font-size 1.1em
      line-height 1
      flex 1
      text-align right

  &__selected
    display inline-block
    width 14px
    height 14px
    vertical-align middle
    margin-right 10px
    border-radius 100%
    background #eee
    transition background .2s
    cursor pointer
    .is-selected &
      background $base-sub
  &__input
    display inline-block
    padding .36em 0
    margin 0 .2em 0 .1em
    input
      color $text-sub
  &__upload
    margin-right 3px
    display inline-block
    width 20px
    height 20px
    overflow hidden
    line-height 18px
    font-size 1.1em
    text-align center
    cursor pointer
    vertical-align middle
    transition .2s
    &:hover
      color $base-sub
    input
      opacity 0
      visibility hidden
  .part
    display inline-block
    padding .36em .6em
    margin 0 .1em
    cursor pointer
    border-radius .28em
    transition background .2s, color .2s
    &:hover
      background $base-sub
      color #fff
    &.-url
      &:hover
        background transparent
        color inherit
      input
        margin 0 .2em
    &.-position
      cursor move
      span:first-child
        margin-right 5px
    &.-size
      cursor ns-resize
