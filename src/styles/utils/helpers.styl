.container
  display table
  width 100%
  height 100vh
  max-width 1120px
  margin auto
  padding-left 10px
  padding-right 10px
  &__header
    display table-row
  &__app
    display table-row
    height 100%
    user-select none
  &__options
  &__main
    display table-cell
    vertical-align top
    padding 3px 3px 10px
  &__main
    padding-bottom 40px
    &-inner
      display flex
      height 100%
      flex-direction column
  &__options
    width 360px

.sec
  background #fff
  border-radius 2px
  box-shadow 0 1px 2px rgba(16,10,9,.15)
  &__heading
    margin-bottom 12px
    display flex
    align-items center
  &__label
    margin-right 10px
    color $base-sub
    text-transform uppercase
  &__btn
    color lighten($text-sub, 60%)
    padding .1em .6em
    border 1px solid lighten($text-sub, 75%)
    border-radius .3em
    cursor pointer
    transition .15s
    &:hover
      color mix($base-sub, #aaa, 50%)
      border 1px solid mix($base-sub, #eee, 50%)
      background rgba($base-sub, 5%)

.check
  display inline-block
  position relative
  margin-right 7px
  input
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0
    cursor pointer
    &:checked + .check__display
      background #f2711c
  &__display
    display inline-block
    width 10px
    height 10px
    background #e8e8e8
    border-radius 50%
    transition .15s
    cursor pointer

.drag-overlay
  display none
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 100
  cursor move
  user-select none

.github-badge
  a
    display block
    clip-path polygon(100% 0, 0 0, 100% 100%)
    transition .15s
    &:hover
      opacity .8
  img
    max-height 130px
